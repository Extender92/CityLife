<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="citypic.jpg"
             Title=""
             x:Class="CityLifeProj.MainPage">

    <ScrollView>

        <VerticalStackLayout
            Spacing="10"
            VerticalOptions="Center">


            <Label
                Text="City"
                FontSize="100"
                TextColor="DarkRed"
                TextDecorations="Underline"
                TextTransform="Uppercase"
                HorizontalOptions="Center" />

            <Label
                Text="Life"
                FontSize="100"
                TextColor="DarkRed"
                TextDecorations="Underline"
                TextTransform="Uppercase"
                HorizontalOptions="Center" />
            
            <Label
                Text="Beta"
                FontSize="20"
                TextColor="DarkRed"
                TextDecorations="Underline"
                TextTransform="Uppercase"
                HorizontalOptions="Center" />

            <Button
                Clicked="OnClickedStartNewGame"
                Text="Start New Game"
                TextColor="Red"
                BackgroundColor="Transparent"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
